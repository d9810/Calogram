<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/border_pressed_button_color" />
            <corners android:radius="4dp" />
            <stroke
                android:width="1dp"
                android:color="@color/edit_border_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/border_button_color" />
            <corners android:radius="4dp" />
            <stroke
                android:width="1dp"
                android:color="@color/edit_border_color" />
        </shape>
    </item>

</selector>